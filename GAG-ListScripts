-- Biáº¿n toÃ n cá»¥c cho Auto-Buy
local AutoBuy = {Value = false}
local OnlyShowStock = {Value = false}
local SelectedSeedStock = {Selected = ""}
local SeedStock = {}

-- HÃ m láº¥y danh sÃ¡ch háº¡t giá»‘ng trong shop
local function GetSeedStock(IgnoreNoStock)
    local PlayerGui = game.Players.LocalPlayer.PlayerGui
    local SeedShop = PlayerGui:WaitForChild("Seed_Shop")
    local Items = SeedShop:FindFirstChild("Blueberry", true).Parent
    local NewList = {}

    for _, Item in next, Items:GetChildren() do
        local MainFrame = Item:FindFirstChild("Main_Frame")
        if not MainFrame then continue end

        local StockText = MainFrame.Stock_Text.Text
        local StockCount = tonumber(StockText:match("%d+"))

        if IgnoreNoStock then
            if StockCount <= 0 then continue end
            NewList[Item.Name] = StockCount
            continue
        end

        SeedStock[Item.Name] = StockCount
    end

    return IgnoreNoStock and NewList or SeedStock
end

-- HÃ m mua háº¡t giá»‘ng
local function BuySeed(Seed)
    game:GetService("ReplicatedStorage").GameEvents.BuySeedStock:FireServer(Seed)
end

-- HÃ m mua toÃ n bá»™ háº¡t giá»‘ng Ä‘Ã£ chá»n
local function BuyAllSelectedSeeds()
    local Seed = SelectedSeedStock.Selected
    local Stock = SeedStock[Seed]
    if not Stock or Stock <= 0 then return end
    for i = 1, Stock do
        BuySeed(Seed)
    end
end

-- Tab Auto-Buy
local AutoBuyTab = Window:CreateTab("Auto-Buy ðŸ¥•", 1234567890) -- iconId tuá»³ chá»n

local SeedDropdown = AutoBuyTab:CreateDropdown({
    Name = "Seed",
    Options = {},
    CurrentOption = "",
    Callback = function(Value)
        SelectedSeedStock.Selected = Value
    end
})

AutoBuyTab:CreateToggle({
    Name = "Enabled",
    CurrentValue = false,
    Callback = function(Value)
        AutoBuy.Value = Value
    end
})

AutoBuyTab:CreateToggle({
    Name = "Only list stock",
    CurrentValue = false,
    Callback = function(Value)
        OnlyShowStock.Value = Value
        -- Cáº­p nháº­t láº¡i danh sÃ¡ch seed
        local items = {}
        for k in pairs(GetSeedStock(Value)) do
            table.insert(items, k)
        end
        SeedDropdown:SetOptions(items)
    end
})

AutoBuyTab:CreateButton({
    Name = "Buy all",
    Callback = BuyAllSelectedSeeds
})

-- HÃ m cáº­p nháº­t danh sÃ¡ch seed khi má»Ÿ tab
local function UpdateSeedDropdown()
    local items = {}
    for k in pairs(GetSeedStock(OnlyShowStock.Value)) do
        table.insert(items, k)
    end
    SeedDropdown:SetOptions(items)
end

UpdateSeedDropdown()

-- Auto-Buy loop
task.spawn(function()
    while task.wait(0.5) do
        if AutoBuy.Value then
            BuyAllSelectedSeeds()
        end
        UpdateSeedDropdown()
    end
end)
